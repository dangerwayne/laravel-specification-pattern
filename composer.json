{
    "name": "dangerwayne/laravel-specifications",
    "description": "Elegant specification pattern implementation for Laravel with support for Eloquent queries and in-memory filtering",
    "keywords": ["laravel", "specification", "pattern", "ddd", "domain-driven-design", "business-rules"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/database": "^9.0|^10.0|^11.0",
        "illuminate/collections": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.5.10|^10.0|^11.0",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "DangerWayne\\Specification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DangerWayne\\Specification\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint",
        "format-check": "vendor/bin/pint --test"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DangerWayne\\Specification\\Providers\\SpecificationServiceProvider"
            ],
            "aliases": {
                "Specification": "DangerWayne\\Specification\\Facades\\Specification"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}